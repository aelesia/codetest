<div class="container">
	<div>
		<div class="page-header">
            <h1><%= @student.name %></h1>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<b>Student ID</b>
			</div>
			<div class="col-xs-9">
				<%= @student.student_id %>
		  	</div>
		</div>
		<div class="row">
			<div class="col-xs-3">
				<b>Faculty</b>
			</div>
			<div class="col-xs-9">
                <%= @student.faculty %>
			</div>
		</div>
	</div>
	<br/>
    <div>
        <a href="javascript:history.back()" class="btn btn-primary" role="button">
            <span>Back</span>
        </a>
        <a href=<%=@student.student_id.to_s + '.pdf'%> class="btn btn-success" role="button">
            <span class="glyphicon glyphicon-download-alt"></span>
            <span>&nbsp; PDF</span>
        </a>
	</div>
	<div id="qrcode"></div>
</div>